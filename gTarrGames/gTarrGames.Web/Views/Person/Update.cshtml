@model gTarrGames.Shared.ViewModels.PersonViewModel

<script src="~/Scripts/DMACC/person.js" type="text/javascript"></script>


<h2>Create Profile</h2>

<div id="successMessage" class="hidden alert alert-success">Successfully Updated!</div>
<div id="errorMessage" class="hidden alert alert-danger">Error Occurred!</div>

<body>
    <form>
        <PersonViewModel>
            <input id="personId" type="hidden" value="@Model.PersonId"/>
            <div class="col-md-12">
                <div class="col-md-6">
                    <label>First Name:</label>
                </div>
                <div class="col-md-6">
                    <input id="firstName" type="text" class="form-control" required maxlength="30" value="@Model.FirstName" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <label>Last Name:</label>
                </div>
                <div class="col-md-6">
                    <input id="lastName" type="text" class="form-control" required maxlength="30" value="@Model.LastName" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <label>Gender:</label>
                </div>
                <div class="col-md-6">
                    <input id="gender" type="text" class="form-control" value="@Model.Gender" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <label>Email:</label>
                </div>
                <div class="col-md-6">
                    <input id="email" type="email" class="form-control" required value="@Model.Email" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-6">
                    <label>Phone Number:</label>
                </div>
                <div class="col-md-6">
                    <input id="phoneNumber" type="tel" pattern="^[0-9-+s()]*$" class="form-control" placeholder="(123) 456-7890"value="@Model.PhoneNumber" />
                </div>
            </div>

            <div class="col-md-12">
                <button class="btn" onclick="updatePerson()">Save</button>
            </div>
        </PersonViewModel>
    </form>
</body>
